            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <StackPane layoutX="75.0" layoutY="353.0" prefHeight="70.0" prefWidth="70.0">
         <children>
            <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
