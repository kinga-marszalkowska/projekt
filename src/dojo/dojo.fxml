      <ImageView fx:id="back_arrow_canvas_screen" fitHeight="50.0" fitWidth="50.0" layoutX="18.0" layoutY="17.0" onMouseClicked="#goBackToStatisticsScreen" pickOnBounds="true" preserveRatio="true">
